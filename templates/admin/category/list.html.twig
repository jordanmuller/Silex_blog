{% extends "layout.html.twig" %}

{% block title 'Admin rubriques' %}
    
{% block content %}
    <h1>Gestions rubriques</h1>
    
    <p><a href="{{ path('admin_category_edit') }}">Ajouter une nouvelle rubrique</a></p>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th width="200px"></th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    {# syntaxte pour un tableau associatif id: valeur, comme clÃ© => valeur #}
                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-primary">
                        Modifier
                    </a>
                    <a href="{{ path('admin_category_delete', {id: category.id}) }}" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
